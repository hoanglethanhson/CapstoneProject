{
  "name": "hovi-server",
  "version": "1.0.0",
  "description": "Server side for Hovi - Take it easy",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "name": "hovi",
    "email": "hovi.vn@gmail.com"
  },
  "contributors": [
    "Nguyen Nhu Thuong <ThuongNNSE05095@fpt.edu.vn> (https://www.facebook.com/thuongnn97)",
    "Hoang Le Thanh Son <SonHLTSE05415@fpt.edu.vn> (https://www.facebook.com/son.hoanglethanh)"
  ],
  "scripts": {
    "dev": "NODE_ENV=development tsc-watch --onSuccess \"node ./build/src/server.js\"",
    "start": "tsc && node ./build/src/server.js",
    "build": "tsc",
    "test": "tsc && jest --coverage --verbose",
    "test:watch": "jest --watch --runInBand"
  },
  "devDependencies": {
    "@types/compression": "^1.0.0",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.2",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "jest-html-reporters": "^1.1.8",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "tsc-watch": "^2.4.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "class-validator": "^0.10.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.1.0",
    "express": "5.0.0-alpha.7",
    "mysql": "^2.17.1",
    "typeorm": "^0.2.18"
  },
  "jest": {
    "setupFiles": [
      "./jest-setup.ts"
    ],
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./coverage",
          "filename": "index.html",
          "expand": true
        }
      ]
    ]
  }
}
